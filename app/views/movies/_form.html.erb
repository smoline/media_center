<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <fx-input
      data-error="<%= movie.errors[:title].first %>"
      label="Title"
      required
      name="movie['title']"
      placeholder="Movie Title"
      value="<%= movie.title %>"></fx-input>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :runtime %>
    <%= form.number_field :runtime %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>